<h2 align="center"><%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description"></h4>
    <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
        <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-primary" %>
        <%= link_to 'Delete this article', articles_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
        <%= link_to 'Back to Article Listing page', articles_path, class: "btn btn-success" %>
    </div>
</div>


